// This will be our application entry. We'll setup our server here.
const app = require('../app');
const server = require('http').createServer(app);

const io = require('socket.io')(server, {
  cors: {
    origin: "https://ellenb2b.ngrok.io",
    methods: ["GET", "POST"],
    credentials: false
  }
});

const { eventEmitter } = require ('../server/services/eventBus')

io.on("connection", socket => { 
  eventEmitter.on('somedata', (data) => {
    socket.emit("earningsData", data);
  })
});

server.listen(8000);

const Queues = require ('../server/services/bull-queues');
const initEarningsCron = require ('../server/services/bull-queues');
const { initCronAddEarnings, initCronAddCalendarEvents } = require ('../server/services/earnings/earningsDailyQueue');

Queues.initEarningsQueues()
Queues.initProcessEarningsQueueCron()
Queues.initGetCalendarEventsQueueCron()
initCronAddEarnings()
initCronAddCalendarEvents()


const port = parseInt(process.env.PORT, 10) || 8000;
app.set('port', port);